<!-- Smooth scrolling between sections on all a tags with 'smoothScroll' as a class-->
<script>
// Fine all a tags with smoothScroll
document.querySelectorAll('.smoothScroll').forEach($anchor => {
  // Listen for mouse click
  $anchor.addEventListener('click', function (e) {
    e.preventDefault();
    // Get the href page link and scroll into view
    document.querySelector(this.getAttribute('href')).scrollIntoView({
      // animation
      behavior: 'smooth',
      block: 'start' //scroll to top of the target element
    });
  });
});
</script>
